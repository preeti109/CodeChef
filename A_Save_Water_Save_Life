import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef {
	public static void main (String[] args) throws java.lang.Exception {
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-->0) {
		int H = sc.nextInt();	
		int x = sc.nextInt();
		int y = sc.nextInt();
		int C = sc.nextInt();
		int y2 = (int)y/2;
		System.out.println(C >= H*(x+y2) ? "YES" : "NO");
		}
	}
}
