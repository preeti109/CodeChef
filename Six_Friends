#include <stdio.h>

int main(void) {
	// your code goes here
	int t;
	scanf("%d", &t);
	while(t--){
	    int x, y, a, b;
	    scanf("%d %d", &x, &y);
	    a=3*x;
        b=2*y;
        if(a>b){
            printf("%d\n", b);
        }
        else{
            printf("%d\n", a);
        }
	}
	return 0;
}

