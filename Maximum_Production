/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner read = new Scanner(System.in);
		int t = read.nextInt();
		while(t-->0) {
		    int d = read.nextInt();
		    int x = read.nextInt();
		    int y = read.nextInt();
		    int z = read.nextInt();
		    
		    int p = (y*d)+(z*(7-d));
		    int r = 7*x;
		    System.out.println(Math.max(p, r));
		}
	}
}
