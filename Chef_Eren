#include <stdio.h>
int main(void) {
    int t, N, A, B, X, i;
    scanf("%d", &t);
    while(t--){
        scanf("%d %d %d", &N, &A, &B);
        X=0;
        for(i=1;i<=N;i++){
            if(i%2==0)
            X+=A;
            else
            X+=B;
        }
        printf("%d\n", X);
    }
	return 0;
}

